extends base.pug

//- block scripts
//-   script(src='../static/index.js')

block style 
  style
    include stylecontact.css

block content

    nav#navbar 
            .container 
                .logo 
                    img(src="../static/logo.jpg" alt="Sorry")
                    h2 HDA
            .menu 
                img(src="../static/menu.png", alt="")
            .close 
                img(src="../static/close.png", alt="")  
            ul
                li #[a(href = '/home') Home]
                li #[a(href = '/about') About]
                li #[a(href = '/services') Service]
                li #[a(href = '/join') Join Class]
                li #[a(href = '/contact') Contact us]
      
    h1 Fill The Form , We Will Contact you As Soon As Possible-  


    form(action="/contact", method="post" required)
      input(type="text", name="name" required  placeholder="Enter your Name")
      input(type="text", name="Age"  required placeholder="Enter your Age")
      input(type="text", name="Address" required placeholder="Enter your Address")
      input(type="email", name="Email" required placeholder="Enter your email-id"  pattern="[A-Za-z]{0-9}@gmail.com")
      input(type="tel",  name="Mobile No" required  placeholder="Enter your mobile number" maxlength ="10" minlength="10")
      .btn(onclick="SUBMIT()")
        button Submit
    script
        include ../static/index.js

